.profixcontainer{
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  position: relative;
}
.profilebg{
  width: 100%;
  height: 400px; 
  background-repeat:round; 
  background-size:cover;
  opacity:1
}
.profilebginner{
  width: 100%;
  height: 400px; 
  opacity:0.4; 
  background-color: #000000;
}
.profileinfo{
  position: fixed;
  top: 0;
  left: 0;
}
.profileavatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 150rpx;
  margin-top: 200rpx;
  margin-left: 40rpx;
}
.profileUsername{
  color: #ffffff;
  font-size: 20px;
  font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  margin-left: 40rpx;
  margin-top: 20rpx;
}
.briefIntro{
  color: #ffffff;
  font-size: 15px;
  margin-left: 40rpx;
  margin-top: 15rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.itemview{
  margin-top: 10rpx;
}
.gender{
  background-color: gray;
  border-radius: 25rpx;
  font-size: 12px;
  padding:2px 10px 2px 10px;
  color: #ffffff;
  margin-right: 10rpx;
}
.firstItem{
  margin-left: 40rpx
}